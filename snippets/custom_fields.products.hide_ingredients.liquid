{% if product.metafields.custom_fields["hide_ingredients"] != blank %}
  <div class="custom-field custom-field__hide-ingredients custom-field__type--checkbox">
    <h3 class="custom-field--title">Hide Ingredients</h3>
    <div class="custom-field--value">
      {% if product.metafields.custom_fields["hide_ingredients"] == 1 %}
        TRUE
      {% else %}
        FALSE
      {% endif %}
    </div>
  </div>
{% endif %}