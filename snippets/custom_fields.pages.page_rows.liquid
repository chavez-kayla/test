{% comment %}
  DO NOT MODIFY THIS FILE DIRECTLY. THIS FILE WILL BE OVERWRITTEN.
  YOU CAN MODIFY THE LIQUID CODE FOR THIS CUSTOM FIELD HERE:
  https://customfields.bonify.io/dashboard/tubby-todd-bath-co.myshopify.com/pages/configure/127403/edit
{% endcomment %}
{% if page.metafields.custom_fields["page_rows"] != blank %}
  <div class="custom-field custom-field__page-rows custom-field__type--field-collection">
    <h3 class="custom-field--title">Page Rows</h3>
    <div class="custom-field--value">
      {% assign separator = "|###|" %}
      {% assign image_alignment_array = page.metafields.custom_fields["image_alignment"] | split: separator %}
      {% assign image_array = page.metafields.custom_fields["image"] | split: separator %}
      {% assign title_array = page.metafields.custom_fields["title"] | split: separator %}
      {% assign subtitle_array = page.metafields.custom_fields["subtitle"] | split: separator %}
      {% assign text_array = page.metafields.custom_fields["text"] | split: separator %}
      {% assign masonry_title_array = page.metafields.custom_fields["masonry_title"] | split: separator %}
      {% assign fc_keys = page.metafields.custom_fields["page_rows"] | split: "," %}
      {% for i in fc_keys %}
        {% assign index = i | plus: 0 %}
        <div class="fc-item fc-item--row fc-index--{{ index }}">
          <div class="fc-field field__image-alignment">
            {{ image_alignment_array[index] }}
          </div>
          <div class="fc-field field__image">
            {{ image_array[index] }}
          </div>
          <div class="fc-field field__title">
            {{ title_array[index] }}
          </div>
          <div class="fc-field field__subtitle">
            {{ subtitle_array[index] }}
          </div>
          <div class="fc-field field__text">
            {{ text_array[index] }}
          </div>
          <div class="fc-field field__masonry-title">
            {{ masonry_title_array[index] }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}