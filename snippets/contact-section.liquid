<div data-section-id="{{ section.id }}" data-section-type="contact-template">
  {% if banner %}
    <section class="banner banner-about container-wrap">
      <div class="container">
        <div class="row row-lg">
          <div class="banner-inner">
            <img src="{{ banner | img_url: '2000x' }}" alt="{{ contact_heading | escape }}">
          </div>
        </div>
      </div>
    </section>
  {% endif %}
  <div class="container-wrap">
    <div class="contact-form-container container">
      <div class="row row-med">
        <div class="contact-column contact-column-form">
          {% if contact_heading != blank or contact_content != blank %}
            <div class="contact-text">
              {% if contact_heading != blank %}
                <h1>{{ contact_heading }}</h1>
              {% endif %}
            
              {% if contact_content != blank %}
                <div class="content-wrapper text-content rte">
                  {{ contact_content }}
                </div>
              {% endif %}
            </div>
          {% endif %}
          <div class="simple-image-text-module container-wrap featured-product" data-section-type="rich-text">
           <div class="container">
            <div class="row row--split">
              <div class="rich-content no-button align--left lg_align--left padding">
				<div class="max-width padding-top">	
					<h3>{{ section.settings.title-1 }}</h3>
					<div class="extra-large">
						<p>{{ section.settings.text-1 | newline_to_br }}</p>
					</div>
				</div>
			</div>
             <div class="rich-content no-button align--left lg_align--left padding">
				<div class="max-width padding-top">	
					<h3>{{ section.settings.title-2 }}</h3>
					<div class="extra-large">
						<p>{{ section.settings.text-2 | newline_to_br }}</p>
					</div>
				</div>
			</div>
              </div>
            </div>
          </div>      
          <div class="contact-form">
            {% form 'contact', class: "validate" %}

              {% if form.posted_successfully? %}
                <div class="successForm feedback">
                  <p>{{ 'contact.form.submit_success' | t }}</p>
                </div>
              {% else %}
                {% if form.errors %}
                <div class="feedback error p">
                  {{ form.errors | default_errors }}
                </div>
                {% endif %}
                <div id="contactFormWrapper">
                  <p class="text-small">* = required</p>
                  <p>
                    <label for="contactFormName">{{ 'contact.form.name_field' | t }}*</label>
                    <input type="text" autocomplete="given-name" id="contactFormName" name="contact[name]"  required aria-required="true"/>
                  </p>
                  <p>
                    <label for="contactFormEmail">{{ 'contact.form.email_field' | t }}*</label>
                    <input type="email" autocomplete="email" id="contactFormEmail" name="contact[email]"  required aria-required="true"/>
                  </p>
                  <p>
                    <label for="contactFormTelephone">{{ 'contact.form.phone_field' | t }}*</label>
                    <input type="telephone" autocomplete="tel" id="contactFormTelephone" name="contact[phone]"  required aria-required="true"/>
                  </p>
                  <p>
                    <label for="contactFormMessage">{{ 'contact.form.message_field' | t }}*</label>
                    <textarea rows="15" cols="75" id="contactFormMessage" name="contact[body]" required aria-required="true"></textarea>
                  </p>
                  <p>
                    <input type="submit" id="contactFormSubmit" class="button" value="{{ 'contact.form.submit_button' | t }}" />
                  </p>
                </div><!-- contactWrapper -->
              {% endif %}
            {% endform %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>