<script>
	jQuery(document).ready(function($){
		var offset = 200;
		var speed = 250;
		var duration = 500;
		$(window).scroll(function(){
			if ($(this).scrollTop() < offset) {
				$('.top-scroll') .fadeOut(duration);
			} else {
				$('.top-scroll') .fadeIn(duration);
			}
		});
		$('.top-scroll').on('click', function(){
			$('html, body').animate({scrollTop:0}, speed);
			return false;
		});
	});
</script>