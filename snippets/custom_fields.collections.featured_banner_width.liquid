{% if collection.metafields.custom_fields["featured_banner_width"] != blank %}
  <div class="custom-field custom-field__featured-banner-width custom-field__type--checkbox">
    <h3 class="custom-field--title">Constrain Featured Banner Width</h3>
    <div class="custom-field--value">
      {% if collection.metafields.custom_fields["featured_banner_width"] == 1 %}
        TRUE
      {% else %}
        FALSE
      {% endif %}
    </div>
  </div>
{% endif %}