{% if product.metafields.custom_fields["hide_promise_box"] != blank %}
  <div class="custom-field custom-field__hide-promise-box custom-field__type--checkbox">
    <h3 class="custom-field--title">Hide Promise Box</h3>
    <div class="custom-field--value">
      {% if product.metafields.custom_fields["hide_promise_box"] == 1 %}
        TRUE
      {% else %}
        FALSE
      {% endif %}
    </div>
  </div>
{% endif %}