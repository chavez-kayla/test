{% if product.metafields.custom_fields["hide_pricing"] != blank %}
  <div class="custom-field custom-field__hide-pricing custom-field__type--checkbox">
    <h3 class="custom-field--title">Hide Pricing</h3>
    <div class="custom-field--value">
      {% if product.metafields.custom_fields["hide_pricing"] == 1 %}
        TRUE
      {% else %}
        FALSE
      {% endif %}
    </div>
  </div>
{% endif %}