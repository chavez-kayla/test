{% comment %}
  DO NOT MODIFY THIS FILE DIRECTLY. THIS FILE WILL BE OVERWRITTEN.
  YOU CAN MODIFY THE LIQUID CODE FOR THIS CUSTOM FIELD HERE:
  https://customfields.bonify.io/dashboard/tubby-todd-bath-co.myshopify.com/pages/configure/241144/edit
{% endcomment %}
{% if page.metafields.custom_fields["masonry_items"] != blank %}
  <div class="custom-field custom-field__masonry-items custom-field__type--field-collection">
    <h3 class="custom-field--title">Masonry Items</h3>
    <div class="custom-field--value">
      {% assign separator = "|###|" %}
      {% assign masonry_item_title_array = page.metafields.custom_fields["masonry_item_title"] | split: separator %}
      {% assign masonry_item_subtitle_array = page.metafields.custom_fields["masonry_item_subtitle"] | split: separator %}
      {% assign masonry_item_image_array = page.metafields.custom_fields["masonry_item_image"] | split: separator %}
      {% assign masonry_item_text_array = page.metafields.custom_fields["masonry_item_text"] | split: separator %}
      {% assign masonry_item_width_array = page.metafields.custom_fields["masonry_item_width"] | split: separator %}
      {% assign fc_keys = page.metafields.custom_fields["masonry_items"] | split: "," %}
      {% for i in fc_keys %}
        {% assign index = i | plus: 0 %}
        <div class="fc-item fc-item--item fc-index--{{ index }}">
          <div class="fc-field field__masonry-item-title">
            {{ masonry_item_title_array[index] }}
          </div>
          <div class="fc-field field__masonry-item-subtitle">
            {{ masonry_item_subtitle_array[index] }}
          </div>
          <div class="fc-field field__masonry-item-image">
            {{ masonry_item_image_array[index] }}
          </div>
          <div class="fc-field field__masonry-item-text">
            {{ masonry_item_text_array[index] }}
          </div>
          <div class="fc-field field__masonry-item-width">
            {{ masonry_item_width_array[index] }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}