{% if collection.metafields.custom_fields["subtitle_above"] != blank %}
  <div class="custom-field custom-field__subtitle-above custom-field__type--checkbox">
    <h3 class="custom-field--title">Subtitle above title</h3>
    <div class="custom-field--value">
      {% if collection.metafields.custom_fields["subtitle_above"] == 1 %}
        TRUE
      {% else %}
        FALSE
      {% endif %}
    </div>
  </div>
{% endif %}