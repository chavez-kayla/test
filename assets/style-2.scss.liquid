/*
 * Pagination
 */
hr {
	@include blockRel;

	border: 0;
	border-top: 1px solid $c-border;
}
.pagination {
	margin: 0 0 20px;
	text-align: center;

	.page {
		margin: 10px 10px;
		opacity: .6;
	}

	.page.current {
		opacity: 1;
	}

	.prev {
		float: left;
	}
	.next {
		float: right;
	}
}

.pagination__list {
	list-style: none;
	display: flex;
	align-items: center;
	justify-content: center;
	width: 100%;
}

.pagination__item {
	margin: 0 5px;

	a {
		display: flex;
		align-items: center;
		justify-content: center;
		text-align: center;
		width: 28px;
		height: 28px;
		border-radius: 50%;
		border: 1px solid $c-border;
	}
}

.tag-label {
	color: $c-text;
}

.blog-listing {
	.article--featured {
		position: relative;
		margin-bottom: 40px;
		padding-left: 20px;
		padding-right: 20px;

		&::after {
			content: '';
			display: table;
			clear: both;
			height: 0;
			line-height: 0;
		}

		.article-image-container {
			position: relative;
			float: right;
			width: calc(50% - 20px);
			
			.article-image {
				margin: 0;
				padding-top: 89%;
			}

			.details {
				position: absolute;
				top: 100%;
				left: 0;
				width: 100%;
				margin: 10px 0 0;
				text-align: center;
				white-space: nowrap;
				overflow: hidden;
				text-overflow: ellipsis;
				font-family: $button_font;
				font-weight: $button_font_weight;
				font-style: $button_font_style;
				font-size: $font_bodytext_size * 0.86;

				@media screen and (min-width: $med) {
					top: auto;
					bottom: 0;
					width: auto;
					text-align: left;
					max-width: 100%;
					margin: 0 0 0 -8px;
					transform-origin: left bottom;
					-webkit-transform-origin: left bottom;
					@include transform(unquote('rotate(-90deg)'));
				}
			}

			@media screen and (max-width: ($med - 1)) {
				float: none;
				width: 100%;
				margin-bottom: 50px;

				.article-image {
					padding-top: 66%;
				}
			}
		}

		.article-content {
			overflow: hidden;
			padding-right: 50px;
			opacity: 1;
			@include transition(unquote('opacity .15s ease-out'));

			h2 {
				font-size: $font_base_size * 2.5;
				font-family: $header_font;
				font-weight: $header_weight_bold;
				line-height: 1.33;
				margin: 10px 0;

				@media screen and (max-width: ($med - 1)) {
					font-size: $font_base_size * 2;
				}
			}

			p {
				font-size: $font_bodytext_size * 1.15;
				line-height: 1.78;
				margin: 0 0 24px;

				@media screen and (max-width: ($med - 1)) {
					font-size: $font_bodytext_size * 0.86;
				}
			}

			.tags {
				font-size: $font_bodytext_size;
				font-family: $button_font;
				font-weight: $button_font_weight;
				font-style: $button_font_style;

				margin: 0;

				a {
					margin-right: 40px;
					text-decoration: none;
					opacity: .75;

					&:last-child {
						margin-right: 0;
					}

					&:hover {
						opacity: 1;
					}
				}
			}

			.details {
				font-size: $font_bodytext_size * 0.86;
				opacity: .75;
			}
		}

		&.article--no-image {
			text-align: center;

			.article-content {
				padding-right: 0;
				max-width: 725px;
				margin: 0 auto;
			}
		}

		@media screen and (max-width: ($med - 1)) {
			text-align: center;

			.accent-line {
				margin-left: auto;
				margin-right: auto;
			}

			.article-content {
				padding-right: 0;
			}
		}

		&.is-loading {
			.article-content {
				opacity: 0;
			}
		}
	}

	.article {
		.details {
			text-transform: capitalize;
		}
	}
	
	.blogModule-posts-post {
		margin-bottom: 30px;
	}
}


.blogModule-posts-post--no-image {
	.carousel-slide-image {
		display: none;
	}
}

.blog-title {
	@include inlineRel;
	width: auto;
}
.blog-rss {
	@include transition(opacity .2s);
	font-size: 1rem;
	line-height: 1;
	opacity: .4;
	position: absolute;
	right: -30px;
	top: 40%;
	&:hover {
		opacity: 1;

		span {
			opacity: 1;
		}
	}

	span {
		@include transition(opacity .2s);
		@include h4;
		opacity: 0;
		line-height: 1.1;
		position: absolute;
		left: 200%;
		min-width: 100px;
		text-align: left;
	}
}

.article-image {
	position: relative;
	padding-top: 66%;
	margin-bottom: 30px;

	background-size: cover;
	background-position: 50% 50%;
	background-repeat: no-repeat;

	a {
		position: absolute;
		top: 0; bottom: 0;
		left: 0; right: 0;
	}
}

.no-js .article-image.lazyload {display: none;}

.article-content {
	img {
		display: block;
		margin: auto;
		margin-bottom: 40px;
		max-width: 100%;
	}
	li {
		text-indent: -17px;
		margin-left: 17px;
	}
}

.article-footer {
	margin-top: 30px;
	margin-bottom: 80px;
	
	.accent-line {
		margin-bottom: 30px;
	}

	.tags, 
	.share {
		color: $c-text;

		a {
			color: $c-text;
		}
	}

	.share {
		clear: left;

		a {
			@include transition(opacity .2s);
			text-decoration: none;
			display: inline-block;
			padding: 10px;
			color: $c-text;

			&:hover {
				opacity: 0.8;
			}

			&:first-child {
				margin-left: 5px;
			}
		}
	}

	.tags {
		font-family: $button_font;
		font-style: $button_font_style;
		font-weight: $button_font_weight;
	}
}

.prev-next {
	text-align: center;
	width: 100%;
	margin: 20px 0;

	&::after {
		content: '';
		clear: both;
		display: table;
		line-height: 0;
	}

	a {
		@include transition(opacity .2s);
		color: $c-text;
		text-decoration: none;

		&:hover {
			opacity: 0.8;
		}
	}

	.__prev a {
		float: left;
		&::before {
			@include icon;
			font-size: 0.8em;
			content: "\e600"; // fa-chevron-left
			margin-right: 5px;
		}
	}

	.__next a {
		float: right;
		&::after {
			@include icon;
			font-size: 0.8em;
			content: "\e601"; // fa-chevron-right
			margin-left: 5px;
		}
	}
}

.back-to-all {
	float: left;

	a {
		@include transition(opacity .2s);
		color: $c-text;
		text-decoration: none;

		&:hover {
			opacity: 0.8;
		}

		&::before {
			@include icon;
			font-size: 0.8em;
			content: "\e600"; // fa-chevron-left
			margin-right: 5px;
		}
	}

	.blog-listing & {
		margin-top: -40px;
		margin-bottom: 60px;
	}
}

.article-comments {
	.meta-comments {
		text-transform: uppercase;
		border-bottom: 1px solid $c-border;
		padding-bottom: 5px;
	}

	#comments > ul > li {
		border-top: 1px solid $c-border;
		padding-top: 20px;
		padding-bottom: 20px;

		&:first-child {
			border-top: 0;
		}
	}
}

.comment-form {
	@extend .contact-form;

	input[type="submit"].button {
		margin-bottom: 45px;
	}
}

.blog-index-link {
	a {
		@include transition(opacity .2s);
		color: $c-text;
		text-decoration: none;

		&:hover {
			opacity: 0.8;
		}

		&::before {
			@include icon;
			font-size: 0.8em;
			content: "\e600"; // fa-chevron-left
			margin-right: 5px;
		}
	}
}

.blog-pagination {
	padding: 5px 0;
	border-top: 1px solid $c-border;
	border-bottom: 1px solid $c-border;
	.page, .next, .prev {
		padding: 0 5px;

		&.current {
			opacity: .8;
			text-decoration: underline;
		}

		a {
			&:hover {
				text-decoration: underline;
			}
		}
	}
}

.rte {
	h1, h2, h3, h4, h5, h6 {
		margin: 0;
	}
	h1 {
		margin-bottom: .8em;
	}
	h2 {
		margin-bottom: .6em;
	}
	h3 {
		margin-bottom: .5em;
	}
	h4 {
		margin-bottom: .4em;
	}
	h5 {
		margin-bottom: .35em;
	}
	h6 {
		margin-bottom: .3em;
	}
	p {
		margin: .7em 0;
	}
	img {
		max-width: 100%;
	}
	ul, ol {
		margin: 0 0 1em 25px;
		padding: 0;
		text-align: left !important;
	}
	ol {
		list-style: decimal inside;
		ul, ol {
			margin: 0;
			padding-left: 1em;
		}
		ul {
			list-style: disc inside;
		}
		ol {
			list-style: decimal inside;
		}
	}
	ul {
		list-style: disc inside;
		ul, ol {
			margin: 0;
			padding-left: 1em;
		}
		ul {
			list-style: circle inside;
			ul {
				list-style: square inside;
			}
		}
		ol {
			list-style: decimal inside;
		}
	}
	li {
		@include p;
		list-style: inherit;
		text-align: left !important;

		// Shopify likes to wrap content to style it
		div {
			text-align: left !important;
		}

		ul, ol {
			margin: 0;
			padding-left: 1em;
		}
		ul {
			list-style: decimal inside;
		}
		ol {
			list-style: decimal inside;
		}
	}

	a {
		@include transition(.2s opacity);
		color: $c-text;

		&:hover {
			opacity: 0.8;
		}
	}

	blockquote { // same styles as h2
		margin: 2em 0 1em;
		padding-left: 1em;
		border-left: 4px solid $c-border;

		font-size: 20px;
		line-height: 26px;
		letter-spacing: .25px;

		// Desktop sizes
		@media screen and (min-width: $sm) {
			font-size: 20px; /*KC-originally 25px;*/
			line-height: 30px;
			padding-left: 2em;
		}
	}


	// Table Styling
	table, th, td {
		border: 2px solid $c-border;
	}
	table {
		width: 100%;
		tr {
			height: 40px;

			&:first-of-type {
				td {
					@include h4;
				}
			}
		}
		th, td {
			padding-left: 20px;
		}
		th {
			@include h4;
			text-transform: uppercase;
			background: #F9F9F9;
		}
		td {
			@include p;
		}
	}
}
.no-js .js-quickView {display: none;}
.quickView-button {
	cursor: pointer;
	vertical-align: middle;
}
.quickView {
	display: block;
	height: 0;
	opacity: 0;
	position: static;
	transition: height .2s ease-in-out, .2s opacity;
		-webkit-transition: height .2s ease-in-out, .2s opacity;
		-moz-transition: height .2s ease-in-out, .2s opacity;
		-ms-transition: height .2s ease-in-out, .2s opacity;
	transition-delay: .1s;
		-webkit-transition-delay: .1s;
		-moz-transition-delay: .1s;
		-ms-transition-delay: .1s;

	.quickView--is-visible & {
		height: 680px; // height of quick view
		opacity: 1;
	}

	@media screen and (max-width: $lg){
		display: none;
	}
}
.quickView-wrap {
	@include blockAb;
	z-index: 10;
	background-color: $c-background;
	height: 0;
	left: 0; right: 0;
	overflow: hidden;
	transition: height .2s ease-in-out;
		-webkit-transition: height .2s ease-in-out;
		-moz-transition: height .2s ease-in-out;
		-ms-transition: height .2s ease-in-out;
	transition-delay: .1s;
		-webkit-transition-delay: .1s;
		-moz-transition-delay: .1s;
		-ms-transition-delay: .1s;

	.quickView--is-visible & {
		height: 650px; // height of quick view
	}

	// Fit image to .quickView-wrap
	.container {
		height: 650px;
		padding-bottom: 50px;

		.row {
			height: 100%;
		}
	}
}
.quickView-img {
	@include blockAb;

	height: 100%;
	left: 0; right: 0;

	.quickView-img-inner {
		@include blockAb;

		bottom: 0; left: 0; right: 0; top: 0;
		background-size: contain;
		background-position: center;
		background-repeat: no-repeat;

		opacity: 0;
		transition: opacity .6s ease-in-out;

		&.quickView-variant-img--is-active {
			opacity: 1;
			z-index: 1;
		}
	}
}

.quickview-product-image {
	height: 100%;
	background-position: center center;
	background-repeat: no-repeat;
	background-size: contain;
	display: none;

	&.quickView-variant-img--is-active {
		display: block;
	}
}

.quickView-info {
	height: 100%;
	padding-left: 6rem;
	-webkit-user-select: initial;
	-khtml-user-select: initial;
	-moz-user-select: initial;
	-ms-user-select: initial;
	user-select: initial;

	&::after {
		@include inlineRel;

		content: '';
		height: 100%;
		vertical-align: middle;
	}

	.productForm {
		display: inline-block;
		max-width: 97%;
		vertical-align: middle;
	}
}
.quickView-close {
	@include blockAb;
	@include transition(unquote('color .2s'));

	color: rgba($c-text, .5);
	cursor: pointer;
	font-size: 3.5rem;
	height: 40px;
	line-height: 40px;
	opacity: .8;
	right: 0;
	top: 0;
	text-align: center;
	width: 40px;

	&:hover {
		color: rgba($c-text, 1);
	}
}

.template-collection {
	.banner {
		display: block;

			// This section is hidden on mobile
			@media screen and (min-width: $med){
					display: block;
			}
	}
}

.collection-no-products {
	padding: 150px 0;

	h4 {
		margin-bottom: 20px;
	}
}

/*
 * Product Grid Slider
 */
.collection-slider {
	margin-bottom: 30px;

	.collectionBlock {
		padding: 22px 22px 0;

		&.quickView--is-active,
		&.quickView--is-visible {
			position: static !important;
		}

		@media screen and (max-width: ($med - 1)) {
			max-width: 66vw;
			width: 66vw !important;
			opacity: .3;
			white-space: normal;
			@include transition(unquote('opacity .35s ease'));

			&:first-child {
				margin-left: 17.5vw;
			}

			&:last-child {
				margin-right: 17.5vw;
			}

			&.is-visible {
				opacity: 1;
			}
		}
	}

	button.slick-prev,
	button.slick-next {
		display: flex !important;
		top: 50%;
		margin-top: 5px;

		&::after {
			font-size: .9rem;
			line-height: normal;

			@media screen and (max-width: $lg) {
				font-size: 0.65rem;
			}

			@media screen and (max-width: ($med - 1)) {
				font-size: 0.45rem;
			}
		}
	}

	button.slick-prev {
		left: -50px;

		&::after {
			content: '\e904';
		}

		@media screen and (max-width: ($med - 1)) {
			left: -35px;
		}
	}

	button.slick-next {
		right: -50px;

		&::after {
			content: '\e905';
		}

		@media screen and (max-width: ($med - 1)) {
			right: -35px;
		}
	}
	
	.slick-slide.has-quickView {
		position: static !important;
		will-change: unset !important;
	}

	.quickView-wrap {
		width: 85vw;
		right: auto;
	}

	@media screen and (max-width: ($med - 1)) {
		white-space: nowrap;
		overflow-x: scroll;
		overflow-y: hidden;
		min-width: 100%;
		max-width: 100%;
		margin-top: -20px;
		bottom: -20px;
		padding-bottom: 20px;
		backface-visibility: hidden;
		-webkit-backface-visibility: hidden;
		-webkit-overflow-scrolling: touch !important;
		
		&::-webkit-scrollbar,
		&::-webkit-scrollbar-track,
		&::-webkit-scrollbar-thumb {
		    width: 0;
		    height: 0;
		    background: transparent;
		    display: none;
		    box-shadow: inset 0 0 0 rgba(0, 0, 0, 0);
		}
	}
 	.collectionBlock-info {
		padding-bottom: 0;
	}
}

.collection-slider__wrapper {
	@media screen and (max-width: ($med - 1)) {
		overflow-y: hidden;
		overflow-x: hidden;
		-webkit-overflow-scrolling: none !important;
	}
}

/*
 * Product Grid Nav - breadcrumbs and filters
 */
.collectionGrid-nav {
	padding: 0 0 10px;
	margin: 20px auto;

	& > .block {
		vertical-align: middle;
	}

	// hide breadcrumbs on mobile
	@media screen and (max-width: ($med - 1)){
		.breadcrumbs:not(.search-alert) {
			display: none !important;
		}
	}
	// hide breadcrumbs on tablet when browse by tag enabled
	{% if settings.browse_by_tag_enabled == true %}
		@media screen and (max-width: $lg){
			.breadcrumbs:not(.search-alert) {
				display: none !important;
			}
		}
	{% endif %}

	@media screen and (min-width: ($lg + 1)) {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
}
.search-alert {
	margin-bottom: 20px;
}
.grid-filter {
	text-align: justify;
	width: 100%;
	@media screen and (min-width: {% if settings.browse_by_tag_enabled == true %} $lg {% else %} $med {% endif %}) {
		width: auto;
	}
}
.collectionGrid-filter {
	text-align: left;
	width: 100%;

	{% if settings.browse_by_tag_enabled == true %}
		float: right !important;
	{% endif %}

	@media screen and (min-width: $med){
		text-align: right;
		width: auto;
	}

	label {
		@include inlineRel;
		@include p;

		font-weight: $button_font_weight !important;
		color: rgba($c-text, .8);
		margin: 0 0 10px 0;
		width: 100%;

		@media screen and (min-width: $med){
			margin: 0 20px 0 0;
			width: auto;
		}
	}


	select {
		@include inlineRel;

		background-color: transparent;
		border: 1px solid $c-border;
		{% if settings.form_colors_enabled %}
			border-color: $c-form-border;
		{% endif %}
		width: 100%;

		@media screen and (min-width: $med){
			width: auto;
		}
	}
}

.tag-filter {
	@extend .collectionGrid-filter;
	float: left !important;
	@media screen and (min-width: ($lg + 1)) {
		margin-right: 25px;
	}
	@media screen and (max-width: ($med - 1)) {
		margin-bottom: 10px;
	}
}

.loadMore {
	margin: 0 0 40px;
	min-width: 140px;
	text-align: center;
	text-transform: uppercase;

	@media screen and (min-width: $med){
		margin: 20px 0 60px;
	}

	&.loading {
		display: none;

		&+.load-more-icon {
			display: block;
		}
	}
}

.loadMore--fake {
	display: none;
}
.visually-hidden + .pagination .loadMore--fake {
	display: inline-block;
}

.empty-collection {
	@media screen and (max-width: ($med - 1)){
		.loadMore {
			margin: 20px 0 60px;
		}
	}
}

.load-more-icon {
	width: 79px;
	height: 64px;
	background: url({{'load-more.gif' | asset_url }}) no-repeat;
	background-size: contain;
	margin: 0 auto;
	display: none;
}

.contact-form-container {
	overflow: hidden;

	margin: 20px auto 35px;

	@media (min-width: $med) {
			margin: 40px auto 75px;
	}
}

.contact-column {
	&.contact-column-info {
		display: none;
	}

	@media (min-width: $med) {
		margin: 0 auto;
		width: 50%;

		&.contact-column-form {
			width: (5/8 * 100%);
			padding-right: 30px;
		}

		&.contact-column-info {
			display: block;
			width: (3/8 * 100%);
		}
	}

	@media (min-width: ($lg + 1)) {
		&.contact-column-form {
			width: (6/8 * 100%);
			padding-right: 60px;
		}

		&.contact-column-info {
			width: (2/8 * 100%);
		}
	}

	.footer-links {
		text-align: left;
	}
}

.contact-text {
	text-align: center;
}

.contact-form {
	margin-top: 30px;

	p {
		margin-bottom: 30px;
	}

	input[type="text"],
