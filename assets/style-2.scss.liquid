			}
		}
		.mosaic__blocks--three {
			.mosaic__block {
				width: calc(50% - 20px);
				height: calc(50vh - 20px);
				
				&:first-child {
					width: calc(100% - 20px);
				}
			}
		}
		.mosaic__blocks--four {
			.mosaic__block {
				height: calc(50vh - 20px);
			}
		}

		&.block--default-height {
			.mosaic__blocks--one {
				.mosaic__block {
					height: calc(100vh * 0.75 - 20px);			
				}
			}
			.mosaic__blocks--two {
				.mosaic__block {
					height: calc(50vh * 0.75 - 20px);			
				}
			}
			.mosaic__blocks--three {
				.mosaic__block {
					height: calc(50vh * 0.75 - 20px);			
				}
			}
			.mosaic__blocks--four {
				.mosaic__block {
					height: calc(50vh * 0.75 - 20px);			
				}
			}
		}
	}

	.mosaic__blocks--split {
		&.mosaic__blocks--four {
			.mosaic__block {
				&:nth-child(1),
				&:nth-child(2),
				&:nth-child(3),
