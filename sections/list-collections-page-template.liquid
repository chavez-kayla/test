{% include 'list-collections-template' %}

{% comment %} Schema {% endcomment %}
{% schema %}
{
  "name": "Collections list",
  "settings": [
		{
      "type": "paragraph",
      "content": "All of your collections are listed by default. To customize your list, choose 'Selected' and add collections."
    },
    {
      "type": "radio",
      "id": "display_type",
      "label": "Select collections to show",
      "default": "all",
      "options": [
        {
          "value": "all",
          "label": "All"
        },
        {
          "value": "selected",
          "label": "Selected"
        }
      ]
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show descriptions",
      "default": true
    },
    {
      "type": "range",
      "id": "collections_columns",
      "label": "Collections per row",
      "default": 2,
      "min": 2,
      "max": 4,
      "step": 1
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button label",
      "default":"View products"
    },
    {
      "type": "header",
      "content": "Colors",
      "info": "For collection blocks"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay",
      "default": "#222222"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay",
      "step": 1,
      "max": 100,
      "min": 0,
      "unit": "%",
      "default": 10
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "label": "Collection",
          "id": "collection",
          "type": "collection"
        }
      ]
    }
  ]
}
{% endschema %}