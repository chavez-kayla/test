{% if section.settings.show_tubby_tip %}
	<div class="row extra-margin-top flex-vertical-align-middle" style="background-color: {{ section.settings.bg_color }};">
		<div class="block s1 med_s12 lg_s12">
			<img src="{{ section.settings.image | img_url: '800x' }}" alt="{% if section.settings.image.alt != '' %}{{ section.settings.image.alt }}{% else %}{% endif %}">
		</div>	
		<div class="block s1 med_s12 lg_s12" style="background-color: {{ section.settings.bg_color }};">
			{% if section.settings.accent_image != blank %}
				<img class="accent-image" src="{{ section.settings.accent_image | img_url: '500x' }}" alt="{% if section.settings.accent_image.alt %}{{ section.settings.accent_image.alt }}{% else %}Tubby Todd Bath Co.{% endif %}">
			{% endif %}
			<div class="extra-padding contain-width-80 margin-auto" style="background-color: #ffffff;">
				<h3 class="text-extra-large margin-bottom padding-top">{{ section.settings.title }}</h3>
				<p class="content margin-bottom">{{ section.settings.text | newline_to_br }}</p>
				{% comment %}<a class="read-more upcase" href="{{ section.settings.link }}" aria-label="Read more {{ section.settings.title | escape }}">{{ section.settings.link_text }}</a>{% endcomment %}
			</div>
		</div>
	</div>	
{% endif %}

{% schema %}
  {
    "name": "Tubby Tip",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_tubby_tip",
        "label": "Show Tubby Tip?",
        "default": false
      },
      {
        "type": "header",
        "content": "Left Side"
      },
			{
			  "type": "image_picker",
			  "id": "image",
			  "label": "Image"
			},
      {
        "type": "header",
        "content": "Right Side"
      },
			{
			  "type": "color",
			  "id": "bg_color",
			  "label": "Background color",
			  "default": "#F8E9EC"
			},
			{
			  "type": "text",
			  "id": "title",
			  "label": "Title"
			},
			{
			  "type": "richtext",
			  "id": "text",
			  "label": "Text"
			},
			{
			  "type": "text",
			  "id": "link_text",
			  "label": "Link text"
			},
			{
			  "type": "url",
			  "id": "link",
			  "label": "Link"
			},
			{
			  "type": "image_picker",
			  "id": "accent_image",
			  "label": "Accent image"
			}
		]
	}	
{% endschema %}