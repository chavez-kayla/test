<div class="container-wrap rewards">
  <div class="extra-padding" style="background-color: {{ section.settings.bg_color }};">
    <div class="row row-sm jumbo-padding-bottom">
			{% if section.settings.title != blank %}<h1 class="text-center">{{ section.settings.title }}</h1>{% endif %}
			{% if section.settings.text != blank %}<p class="text-center text-large">{{ section.settings.text }}</p>{% endif %}
			{% if section.blocks.size > 0 %}
				{% for block in section.blocks %}
                  {% case block.type %} 
                    {% when 'text'%}
					<div class="download_item block s12 sm_s15 lg_s15 padding extra-margin-bottom">					
						{% if block.settings.image %}
							<div class="featured_image text-center flex-vertical-align-middle">				
								{% if block.settings.source_url %}<a href="{{ block.settings.source_url }}" target="_blank" title="Opens in a new window">{% endif %}<img src="{{ block.settings.image | img_url: 'x300' }}" alt="{% if block.settings.image.alt != '' %}{{ block.settings.image.alt | escape }}{% else %}Tubby Todd Bath Co.{% endif %}">{% if block.settings.source_url %}</a>{% endif %}							
							</div>
						{% endif %}					
						{% if block.settings.title != '' or block.settings.description != '' %}
							<div class="mini-padding-bottom">
								{% if block.settings.title %}
									{% if block.settings.source_url %}<a href="{{ block.settings.source_url }}" target="_blank" title="Opens in a new window">{% endif %}<h4 class="text-center" style="color: {{ section.settings.heading_color }};">{{ block.settings.title }}</h4>{% if block.settings.source_url %}</a>{% endif %}
								{% endif %}
								{% if block.settings.description != '' %}
									<p class="text-center">{{ block.settings.description }}</p>
								{% endif %}
							</div>
						{% endif %}
					</div>
                    {% when 'image-picker' %}
                    <div class="collectionBlock js-collectionBlock block s12 sm_s12 lg_s14  is-visible text-center">
        				<a href="{{ block.settings.link }}" title="{{ block.settings.title }}"> 
        				<img src="{{ block.settings.image | img_url: '500x' }}" alt="{% if block.settings.image.alt != '' %}{{ block.settings.image.alt | escape }}{% else %}Tubby Todd Bath Co.{% endif %}">
        				<div class="contain-width-80 margin-auto">
        					<h3>{{ block.settings.title }}</h3>
					<div class="bold">{{ block.settings.text }}</div>
				</div>
				</a>
			</div>
                    {% endcase %}
				{% endfor %}
			{% endif %}		
    </div>
    {% comment %} POINTS INTO PRODUCTS 
    {% if section.settings.title != '' %}
		<div class="page-title extra-margin-bottom">     
			<div class=" container contain-width-80">
				<div class="row row-lg padding-top">      
			  	<h2 class="size--xlarge text-bold" style="color: {{ section.settings.color }};">{{ section.settings.title-2 }}</h2>
				</div>
			</div>       
		</div>
	{% endif %}
 <div class="row row-lg padding inline">
    {% if section.settings.product_image_1 !='' %}
      <div class="image-left" >
			<img src="{{ section.settings.product_image_1 | img_url: '1000x' }}" alt="{% if section.settings.product_image_1.alt != '' %}{{ section.settings.product_image_1.alt | escape }}{% else %}Tubby Todd Bath Co.{% endif %}">
		</div>	
    {% endif %}
    {% if section.settings.product_image_2 !='' %}
      <div class="image-center">
			<img src="{{ section.settings.product_image_2 | img_url: '1000x' }}" alt="{% if section.settings.product_image_2.alt != '' %}{{ section.settings.product_image_2.alt | escape }}{% else %}Tubby Todd Bath Co.{% endif %}">
		</div>	
    {% endif %}
    {% if section.settings.product_image_3 !='' %}
      <div class="image-right" >
			<img src="{{ section.settings.product_image_3 | img_url: '1000x' }}" alt="{% if section.settings.product_image_3.alt != '' %}{{ section.settings.product_image_3.alt | escape }}{% else %}Tubby Todd Bath Co.{% endif %}">
		</div>	
    {% endif %}
 </div>
 {% endcomment %}
  </div> 
	{% if section.settings.design_image_3 != '' %}
		<div class="float-image left">
			<img src="{{ section.settings.design_image_3 | img_url: '1000x' }}" alt="{% if section.settings.design_image_3.alt != '' %}{{ section.settings.design_image_3.alt | escape }}{% else %}Tubby Todd Bath Co.{% endif %}">
		</div>	
	{% endif %}
	{% if section.settings.design_image_4 != '' %}
		<div class="float-image right">
			<img src="{{ section.settings.design_image_4 | img_url: '1000x' }}" alt="{% if section.settings.design_image_4.alt != '' %}{{ section.settings.design_image_4.alt | escape }}{% else %}Tubby Todd Bath Co.{% endif %}">
		</div>	
	{% endif %}
</div>

{% if section.settings.footer_title != '' or section.settings.footer_text != '' %}
	<div class="container-wrap final-outro">
		<div class="container">
			<div class="row row-sm text-center">
				{% if section.settings.show_button != '' %}
					<a href="{{ section.settings.footer_url }}" class="button button--sm button--primary upcase" title="Sign Up for the Club Tub">{{ section.settings.footer_button }}</a>
				{% endif %}
				{% if section.settings.footer_title != '' %}
					<h1 class="extra-padding-top extra-padding-bottom" style="color: {{ section.settings.heading_color }};">{{ section.settings.footer_title }}</h1>
				{% endif %}
				{% if section.settings.footer_text != '' %}
					<p>{{ section.settings.footer_text | newline_to_br }}</p>
				{% endif %}
				{% if section.settings.footer_image != blank %}
					<div class="image contain-width-60 margin-auto padding">
						<img src="{{ section.settings.footer_image | img_url: '800x' }}" alt="{% if section.settings.footer_image.alt != '' %}{{ section.settings.footer_image.alt | escape }}{% else %}Tubby Todd Bath Co.{% endif %}">
					</div>
				{% endif %}
			</div>
		</div>
	</div>
{% endif %}

<style>
	{% if section.settings.design_image_1 != blank %}
		.rewards:before {
	    content: "";
	    display: block;
	    height: 150px;
	    background-image: url('{{ section.settings.design_image_1 | img_url: '2400x' }}');
	    background-repeat: no-repeat;
	    background-position: right bottom;
			background-size: cover;
		}
	{% endif %}
	{% if section.settings.design_image_2 != blank %}
		.rewards:after {
	    content: "";
	    display: block;
	    height: 150px;
	    background-image: url('{{ section.settings.design_image_2 | img_url: '2400x' }}');
	    background-repeat: no-repeat;
	    background-position: right bottom;
			background-size: cover;
			top: -85px;
	    position: relative;
		}
	{% endif %}
	.float-image {
		position: relative;
    display: inline-block;
		top: -50px;
    transform: translateY(-6px);
    -webkit-animation: floaty 2s ease-in-out infinite;
    animation: floaty 2s ease-in-out infinite;
	}
	@keyframes floaty { 
	    0% { transform: translate(0,  0px); } 
	    50%  { transform: translate(0, 15px); } 
	    100%   { transform: translate(0, -0px); }     
	}
	.float-image.left {
		float: left;
	}
	.float-image.right {
		float: right;
	}
	.float-image img {
		top: -280px;
    position: absolute;
	}
	.float-image.left img {
		left: 0px;
	}
	.float-image.right img {
    right: 0px;		
	}
  .image-left img{
    float:left;
    width:300px;
    padding:20px;
    display:table;
    margin:auto;
  }
  .image-center img{
    width:300px;
    padding:20px;
  }
  .image-right img{
    width:300px;
    padding:20px;
  }
	
@media only screen and (max-width: 1024px) {
	#shopify-section-page-club-tub-outro .download_item.padding {
		padding: 10px;
	}
}	

@media only screen and (max-width: 600px) {
	#shopify-section-page-club-tub-outro .download_item.padding {
		max-height: 125px
	}
}
	
@media only screen and (min-width: 1800px) {
	#shopify-section-page-club-tub-outro .rewards .jumbo-padding-bottom {
		padding-bottom: 8em;
	}
	.rewards:before, .rewards:after {
		height: 200px;		
	}
	.rewards:after {
		top: -120px;
	}
	.float-image img {
	  top: -300px;
	}
}	

@media only screen and (min-width: 1950px) {
	.rewards:before, .rewards:after  {
    height: 230px;
	}
	.rewards:after {
		top: -135px;
	}
}
</style>



