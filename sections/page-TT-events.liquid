<div class="page-title extra-padding-top extra-margin-bottom">
  <div class="container contain-width-80">
    <div class="row row-lg padding-top text-center">
       {% if section.settings.image != blank %}
			<img src="{{ section.settings.image | img_url: '500x' }}" alt="{% if section.settings.image.alt != '' %}{{ section.settings.image.alt | escape }}{% else %}Tubby Todd Bath Co.{% endif %}" class="margin-top margin-bottom">
		{% endif %}
    </div>
  </div>
</div>
  <div class="row row-lg padding inline">
  {% for block in section.blocks %}
    <div class="s6 sm_s11 lg_s13 block padding-left padding-right" style="background-color:{{ block.settings.bg_color }}; border: 1px solid #000000">
      <div class="event-content">
      <h2 class="size--xlarge text-bold">{{ block.settings.title }}</h2>
      <p class="text-extra-large margin-top margin-bottom">{{ block.settings.text }}</p>
       {% if block.settings.link %}<a href="{{ block.settings.link }}">{% endif %}{% if block.settings.link_title != '' %}{{ block.settings.link_title }}{% endif %}
       </a>
   </div>
</div>
  {% endfor %}
  <div class="gridSpacer item block s1 sm_s12 lg_s14"></div>
  <div class="gridSpacer item block s1 sm_s12 lg_s14"></div>
  </div>
  <style>
    .event-content{
      text-align:center;
      padding:20px;
    }
    @media only screen and (max-width: 414px){
      img{
        max-width:100%;
      }
    }
    
  </style>
{% schema %}
  {
    "name": "TT Calender Events",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label":"Image"
      }
    ],
    "blocks": [
      {
        "name":"Event",
        "type":"event",
        "settings":[
           {
        "type": "text",
        "id": "title",
        "label":"Title"
      },
          {
			"type": "color",
			"id":   "bg_color",
			"label":"Background color",
			"default":"#f4d2b9"
		},
        {
        "type": "textarea",
        "id": "text",
        "label":"Content"
      },
        {
        	"type": "text",
        	"id": "link_title",
        	"label": "Link title"
       	},
				{
        	"type": "url",
        	"id": "link",
        	"label": "Link"
       	}
        ]
      }
    ]
  }
{% endschema %}
