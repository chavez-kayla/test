{% include 'tubby-cares-commitment-heading' %}

<div class="container contain-width-80">
	<div class="row row-lg text-center">
		{% if section.settings.product_cert != blank %}
			<img src="{{ section.settings.product_cert | img_url: '300x' }}" alt="{% if section.settings.product_cert.alt != '' %}{{ section.settings.product_cert.alt | escape }}{% else %}Tubby Todd Bath Co.{% endif %}" style="max-width: 150px;" class="mini-margin-top mini-margin-bottom">
		{% endif %}
		{% if section.settings.intro != '' %}
			<div class="text-extra-large margin-top margin-bottom">
				{{ section.settings.intro }}
			</div>	
		{% endif %}
		{% if section.settings.highlighted_text != '' %}
			<div class="text-extra-large bold padding-top">
				{{ section.settings.highlighted_text }}
			</div>	
		{% endif %}
	</div>
</div>	
<div class="row row-lg padding inline">
		{% for block in section.blocks %}
			<div class="s6 sm_s12 lg_s13 block padding-left padding-right">
				{% if block.settings.image != blank %}
					<div class="image centered padding">
						<img src="{{ block.settings.image | img_url: '600x' }}" alt="{% if block.settings.image.alt != '' %}{{ block.settings.image.alt | escape }}{% else %}Tubby Todd Bath Co.{% endif %}">
					</div>	
				{% endif %}
				<div class="content">
                  <a href="{{ block.settings.link }}" title="{{ block.settings.title }}"> 
					{% if block.settings.title != blank %}
                    <p>{{ block.settings.title }}</p></a>
					{% endif %}
					{% if block.settings.text != blank %}
						<p>{{ block.settings.text }}</p>
					{% endif %}
				</div>	
			</div>	
		{% endfor %}
	</div>


<style>
	.commitment-3 {
		padding-bottom: 40px;
		background: {{ section.settings.bg_color }};
	}
  p {
  font-size:24px;
  }
</style>	

{% schema %}
{
  "name": "Commitment 3",
	"class": "commitment-3",
  "settings": [
		{
	    "type": "image_picker",
	    "id": "icon",
	    "label": "Heading icon"
	  },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subheading",
			"info": "Displays above heading"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
{
      "type": "textarea",
      "id": "intro",
      "label": "Intro text"
    },
{
      "type": "textarea",
      "id": "highlighted_text",
      "label": "Highlighted text",
			"info": "Displays large and bold"
    },
		{
	    "type": "image_picker",
	    "id": "divider",
	    "label": "Divider image"
	  },
		{
		   "type": "header",
		   "content": "Colors"
		},
		{
      "type": "color",
      "id": "bg_color",
      "label": "Section background color",
      "default": "#ffffff"
    },
		{
      "type": "color",
      "id": "color",
      "label": "Heading color",
      "default": "#000000"
    }
  ],
	"blocks": [
		{
      "type": "text",
      "name": "Content Block",
      "settings": [
				{
        	"type": "text",
        	"id": "title",
        	"label": "Title"
       	},
				{
				   "type": "richtext",
				   "id": "text",
				   "label": "Text"
				},
           {
         	"type": "url",
        	"id": "link",
        	"label": "Link"
        	},
				{
			    "type": "image_picker",
			    "id": "image",
			    "label": "Image"
			  },
				{
				   "type":      "color",
				   "id":        "bg_color",
				   "label":     "Background color",
				   "default":   "#f4d2b9"
				},
				{
				   "type": "select",
				   "id": "image_location",
				   "label": "Image location",
				   "options": [
				     {
				       "value": "left",
				       "label": "Left"
				     },
				     {
				       "value": "right",
				       "label": "Right"
				     }
				   ],
				   "default": "left",
				   "info": "Default location is left"
				}
			]
		}	
	]
}
{% endschema %}