<div class="no-margin extra-padding-top" style="background: {{ section.settings.bg_color }};">
	{% if section.settings.title != '' or section.settings.intro != '' %}
		{% if section.settings.background-image != blank %}
			<div class="bg-block"></div>
		{% endif %}
		<div class="page-title extra-margin-bottom">     
			<div class=" container contain-width-80">
				<div class="row row-lg padding-top">      
			  	<h1 class="page-title__heading size--small" style="color: {{ section.settings.color }};">{{ section.settings.title }}</h1>
				</div>
			</div>
			<div class="container contain-width-80">
				<div class="row row-lg">
			  	<div class="page-title__text rte size--normal extra-margin-bottom">
						<p>{{ section.settings.intro }}</p>
					</div>
				</div>
				{% if section.settings.button_text != '' and section.settings.button_link != '' %}
					<div class="row row-med u-center margin-top extra-margin-bottom">
						<a href="{{ section.settings.button_link }}" class="button button--primary inline upcase" title="{{ section.settings.button_text | strip_html }}">{{ section.settings.button_text | strip_html }}</a>
					</div>
				{% endif %}
			</div>        
		</div>
	{% endif %}
	
	{% include 'collection-gift-guide-product-grid' %}

</div>

<style>
	#shopify-section-collection-gift-guide-product-row-2 .collectionGrid-row img {
		max-width: 100%;
	}
	#shopify-section-collection-gift-guide-product-row-2 .collectionGrid-row div p {
		color: #000;
	}
	#shopify-section-collection-gift-guide-product-row-2 .collectionGrid-row h3 {
		margin-top:15px;
	}
	{% if section.settings.background-image != blank %}
		#shopify-section-collection-gift-guide-product-row-2 {
			position: relative;
		}
		#shopify-section-collection-gift-guide-product-row-2 .bg-block {
			width: 100%;
	    height: 400px;
	    z-index: 0;
	    top: 30px;
	    left: 0;
	    background-size: cover;
	    background-repeat: no-repeat;
	    display: block;
	    position: absolute;
			background-image: url('{{ section.settings.background-image | img_url: '2400x' }}');
		}
	{% endif %}
	{% if section.settings.accent-image != blank %}
		#shopify-section-collection-gift-guide-product-row-2 {
			position: relative;
		}
		#shopify-section-collection-gift-guide-product-row-2:after {
			content: '';
			width: 50px;
	    height: 50px;
	    z-index: 99;
	    bottom: 10%;
	    left: 5%;
	    background-size: contain;
	    background-repeat: no-repeat;
	    display: block;
	    position: absolute;
			background-image: url('{{ section.settings.accent-image | img_url: '2400x' }}');
		}
	{% endif %}
	{% if section.settings.accent-image != blank %}
		#shopify-section-collection-gift-guide-product-row-2 {
			position: relative;
		}
		#shopify-section-collection-gift-guide-product-row-2:before {
			content: '';
			width: 80px;
	    height: 80px;
	    z-index: 99;
	    bottom: 5px;
	    right: 5%;
	    background-size: contain;
	    background-repeat: no-repeat;
	    display: block;
	    position: absolute;
			background-image: url('{{ section.settings.accent-image-2 | img_url: '2400x' }}');
		}
	{% endif %}
</style>

{% schema %}
{
  "name": "Gift Guide Product Row 2",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "intro",
      "label": "Intro text"
    },
		{
      "type": "color",
      "id": "color",
      "label": "Heading color",
      "default": "#000"
    },
		{
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#fff"
    },
		{
		   "type": "text",
		   "id": "button_text",
		   "label": "Button text"
		},
		{
		   "type": "url",
		   "id": "button_link",
		   "label": "Button link"
		},
		{
	    "type": "image_picker",
	    "id": "background-image",
	    "label": "Background image"
	  },
		{
	    "type": "image_picker",
	    "id": "accent-image",
	    "label": "Accent image"
	  },
		{
	    "type": "image_picker",
	    "id": "accent-image-2",
	    "label": "Secondary accent image"
	  }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Product",
      "settings": [
				{
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
				{
        	"type": "text",
        	"id": "title",
        	"label": "Title"
       	},
				{
				   "type": "richtext",
				   "id": "text",
				   "label": "Text"
				},
				{
        	"type": "url",
        	"id": "link",
        	"label": "Link"
       	}
      ]
    }
  ]
}
{% endschema %}