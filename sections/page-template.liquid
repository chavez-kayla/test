{%- if section.settings.show_page_title -%}
  <section class="page-title container-wrap">
    <div class="container">
      <div class="row row-lg inline u-center">
        <h1>{{ page.title }}</h1>
      </div>
    </div>
  </section>
{%- endif -%}

<div class="container-wrap">
  <div class="container text-content rich-content paragraph--xlarge rte">
		{% if template.suffix == 'skinny' %}<div class="rich-text contain-width-70 margin-auto">{% endif %}
    <div class="row row-sm">
      {{ page.content }}
    </div>
		{% if template.suffix == 'skinny' %}</div>{% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Default page",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_page_title",
      "label": "Show page title",
      "default": false
    }
  ]
}
{% endschema %}