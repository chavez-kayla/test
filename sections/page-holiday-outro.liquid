{% for block in section.blocks %}
	<div class="simple-image-text-module container-wrap featured-product" data-section-type="rich-text">
		<div class="container" style="background-color: {{ block.settings.bg_color }};">
			<div class="row row--split row-lg">
				{% if block.settings.image_location == 'left' %}
					<div class="image no-padding-right">
						{% if block.settings.video_embed != blank %}
							{{ block.settings.video_embed }}
						{% elsif block.settings.video_url != '' %}
							<div class="mp4-video">
							  <a href="{{ block.settings.video_url }}"><img class="padding" src="{{ block.settings.image | img_url: '1024x' }}" alt="{% if block.settings.link_title != blank %}{{ block.settings.link_title }}{% else %}Video Link{% endif %}" /></a>       
							</div>
						{% else %}
							<a href="{{ block.settings.image | img_url: '1024x' }}" class="collection-image-lightbox">
								<img src="{{ block.settings.image | img_url: '1024x' }}" alt="{% if block.settings.image.alt != '' %}{{ block.settings.image.alt | escape }}{% else %}Tubby Todd Bath Co.{% endif %}" class="row--split-feat-image">
							</a>
						{% endif %}
					</div>
				{% endif %}
				<div class="rich-content no-button align--left lg_align--left padding" style="background-color: {{ block.settings.bg_color }}; color: {{ block.settings.color }};">
					<div class="max-width jumbo-padding-top">	
						<h2 class="size--xlarge text-bold" style="color: {{ block.settings.heading_color }};">{{ block.settings.title }}</h2>
						<div class="extra-large">
							<p>{{ block.settings.text | newline_to_br }}</p>
						</div>
						{% if block.settings.link %}<a href="{{ block.settings.link }}">{% endif %}{% if block.settings.link_title != '' %}{{ block.settings.link_title }}{% endif %}	{% if block.settings.link_image %}<img src="{{ block.settings.link_image | img_url: '150x' }}" class="link-image" alt="{% if block.settings.image.alt != '' %}{{ block.settings.image.alt | escape }}{% else %}Tubby Todd Bath Co.{% endif %}">{% endif %}{% if block.settings.link %}</a>{% endif %}
					</div>
				</div>
				{% if block.settings.image_location == 'right' %}
					<div class="image no-padding-left">
						{% if block.settings.video_embed != blank %}
							{{ block.settings.video_embed }}
						{% elsif block.settings.video_url != '' %}
							<div class="mp4-video">
							  <a href="{{ block.settings.video_url }}"><img class="padding" src="{{ block.settings.image | img_url: '1024x' }}" alt="{% if block.settings.image.alt != '' %}{{ block.settings.image.alt | escape }}{% else %}Tubby Todd Bath Co.{% endif %}" /></a>       
							</div>
						{% else %}
							<a href="{{ block.settings.image | img_url: '1024x' }}" class="collection-image-lightbox">
								<img src="{{ block.settings.image | img_url: '1024x' }}" alt="{% if block.settings.image.alt != '' %}{{ block.settings.image.alt | escape }}{% else %}Tubby Todd Bath Co.{% endif %}" class="row--split-feat-image">
							</a>
						{% endif %}
					</div>
				{% endif %}
			</div>
		</div>
	</div>
{% endfor %}


{% if section.settings.banner != blank %}
	<div class="featured_image_banner row">							
		<div class="contain-width-50 margin-auto extra-margin-top">
			<img class="padding" src="{{ section.settings.banner | img_url: '2048x' }}" alt="{% if section.settings.banner.alt != '' %}{{ section.settings.banner.alt | escape }}{% else %}Tubby Todd Bath Co.{% endif %}">
		</div>
	</div>
{% endif %}

{% if section.settings.title != '' or section.settings.intro != '' %}
	<div class="page-title extra-padding-top extra-margin-bottom">     
		<div class=" container contain-width-80">
			<div class="row row-lg padding-top">      
		  	<h1 class="page-title__heading size--small" style="color: {{ section.settings.color }};">{{ section.settings.title }}</h1>
			</div>
		</div>
		<div class="container contain-width-80">
			<div class="row row-lg">
		  	<div class="page-title__text rte size--normal extra-margin-bottom">
					<p>{{ section.settings.intro }}</p>
				</div>
			</div>
			{% if section.settings.button_text != '' and section.settings.button_link %}
				<div class="row row-med u-center margin-top extra-margin-bottom">
					<a href="{{ section.settings.button_link }}" class="button button--primary inline upcase" title="{{ section.settings.button_text | strip_html }}">{{ section.settings.button_text | strip_html }}</a>
				</div>
			{% endif %}
		</div>        
	</div>
{% endif %}

<script>
	$(function () {
	   $('.mp4-video a').fancybox({
	       width: 800,
	       height: 540,
	       type: 'iframe'
	   });
  });
</script>

<style>
	#shopify-section-page-holiday-outro .title-module .row--split, #shopify-section-page-holiday-outro .simple-image-text-module .row--split {
		margin-bottom: 0px !important;
	}
	#shopify-section-page-holiday-outro .bodyWrap-spacer {
		padding-top: 130px;
	}
	#shopify-section-page-holiday-outro .container {
		max-width: 2500px;
	}
	#shopify-section-page-holiday-outro .row--split img {
		width: 100%;
	}
	.no-padding-left {
		padding-left: 0px !important;
	}
	.no-padding-right {
		padding-right: 0px !important;
	}
	a.button.button--primary {
		font-size: 1.8em;
	}
	#shopify-section-page-holiday-outro img.link-image {
		width: 50px;
		margin-top: 10px;
	}
	#shopify-section-page-holiday-outro .featured-product {
		margin-bottom: 0px;
	}
	#shopify-section-page-holiday-outro .featured-product p {
		margin-bottom: 10px;
	}
	#holiday-2020 #shopify-section-page-holiday-outro .title-module .row--split, #holiday-2020 #shopify-section-page-holiday-outro .simple-image-text-module .row--split {
		display: flex-end !important;
	}
	#holiday-2020 #shopify-section-page-holiday-outro .simple-image-text-module img.row--split-feat-image {
		margin-top: -15vh;
	}
	{% if section.settings.accent-image != blank %}
		#shopify-section-page-holiday-outro {
			position: relative;
		}
		#shopify-section-page-holiday-outro:before {
			content: '';
	    width: 75px;
	    height: 75px;
			z-index: 99;
			top: -10px;
			left: 5%;
			background-size: contain;
			background-repeat: no-repeat;
	    display: block;
	    position: absolute;
			background-image: url('{{ section.settings.accent-image | img_url: '2400x' }}');
		}
	{% endif %}
	{% if section.settings.accent-image-2 != blank %}
		#shopify-section-page-holiday-outro:after {
			content: '';
	    width: 75px;
	    height: 75px;
			z-index: 99;
			bottom: 30%;
			right: 5%;
			background-size: contain;
			background-repeat: no-repeat;
	    display: block;
	    position: absolute;
			background-image: url('{{ section.settings.accent-image-2 | img_url: '2400x' }}');
		}
	{% endif %}
</style>


