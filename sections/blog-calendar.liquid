{% if section.settings.show_calendar %}
	<div class="row extra-margin-top">
		<div class="calender-color-block" style="background-color: {{ section.settings.bg_color }};"></div>
		<div class="s1 med_s1 lg_s1">
			<h2 class="text-extra-large calendar-title text-center text-white semi-bold margin-bottom">{{ section.settings.title }}</h2>
		</div>	
		<div class="calendar margin-auto contain-width-50">
			{% for block in section.blocks %}
				<div class="calendar-item margin-bottom">
					<span class="event-headline bg-medium-pink upcase text-white bold mini-margin-bottom">Mark your calendar</span>
					<h3 class="text-large">{{ block.settings.title }}</h3>
					{% if block.settings.link %}<a href="{{ block.settings.link }}">{% endif %}
					<p class="text-large">{{ block.settings.text | newline_to_br }}</p>
					{% if block.settings.link %}</a>{% endif %}
				</div>	
			{% endfor %}
		</div>	
	</div>	
{% endif %}

{% schema %}
  {
    "name": "Calendar",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_calendar",
        "label": "Show calendar?",
        "default": false
      },
			{
			  "type": "color",
			  "id": "bg_color",
			  "label": "Background color",
			  "default": "#d2aa86"
			},
			{
			  "type": "text",
			  "id": "title",
			  "label": "Title"
			}
		],
		"blocks": [
	    {
	      "type": "text",
	      "name": "Calendar item",
	      "settings": [
					{
	        	"type": "text",
	        	"id": "title",
	        	"label": "Title"
	       	},
					{
	        	"type": "textarea",
	        	"id": "text",
	        	"label": "Text"
	       	},
					{
	        	"type": "url",
	        	"id": "link",
	        	"label": "Optional link"
	       	}
	      ]
	    }
		]
	}	
{% endschema %}