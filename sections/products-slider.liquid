<script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
{% comment %}
* Make sure you have the Flickity plugin installed and the proper license for this to function on your store
* Plugin, licensing and documentation at https://flickity.metafizzy.co/
{% endcomment %}

<div class="simple-image-text-module container-wrap featured-product" data-section-type="rich-text">
<div class="products-slider" style="background-color: {{ section.settings.bg_color }}">
<div class="row row--split">
  <div class="rich-content no-button align--left lg_align--left padding">
    <div class="padding-top">	
      <h2 class="size--xlarge text-bold" style="color:{{ section.settings.title_color }}; text-align:center;">{{ section.settings.title }}</h2>
    </div>
  </div>
     {% comment %}Carousel will go here{% endcomment %}
     <div class="image no-padding-left">
  <div class="main-carousel" data-flickity='{ "cellAlign": "right", "contain": true, "pageDots": false,"groupCells": true }'>
  <div class="carousel-cell"><img src="{{ section.settings.image | img_url: '500x' }}" alt="{% if section.settings.image.alt != '' %}{{ section.settings.image.alt | escape }}{% else %}Tubby Todd Bath Co.{% endif %}">
    <div class="contain-width-80 margin-auto">
		<h3>{{ section.settings.product_title }}</h3>
			<div class="bold">{{ section.settings.product_text }}</div>
				</div>
  </div>
  <div class="carousel-cell"><img src="{{ section.settings.image_2 | img_url: '500x' }}" alt="{% if section.settings.image_2.alt != '' %}{{ section.settings.image_2.alt | escape }}{% else %}Tubby Todd Bath Co.{% endif %}"></div>
  <div class="carousel-cell"><img src="{{ section.settings.image_3 | img_url: '500x' }}" alt="{% if section.settings.image_3.alt != '' %}{{ section.settings.image_3.alt | escape }}{% else %}Tubby Todd Bath Co.{% endif %}"></div>
  <div class="carousel-cell"><img src="{{ section.settings.image_4 | img_url: '500x' }}" alt="{% if section.settings.image_4.alt != '' %}{{ section.settings.image_4.alt | escape }}{% else %}Tubby Todd Bath Co.{% endif %}"></div>
    {% comment %}End of Carousel {% endcomment %}
  </div>
</div>
</div>
</div>
</div>
<style>
  .carousel-cell img{
    padding-top: 100px;
    padding-bottom:100px;
    margin: 50px;
    height:426px;
  }
</style>
